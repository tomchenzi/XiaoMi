@{ 
    Layout = null;
}

<!doctype html>


<html>
<head>
    <meta charset="utf-8">
    <title>小米账号登录</title>
    <link rel="icon" href="~/Content/logo.png" />


    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <link href="~/Content/user.css" rel="stylesheet" />
    <script>
        $(
            function () {
                $('#logo-button').click(
                    function () {
                        $.post('/home/user_login',
                            {
                                username: $('#name').val(),
                                pwd:$('#pwd').val()
                            },
                            function (res) {
                                if (res == 1) {
                                    sessionStorage.setItem('id', res);
                                    window.location.href = "/home/index";
                                }
                            }
                        ,"json");
                    }
                );
            }
        );

    </script>
</head>
<body>

    <div class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <img src="~/Content/logo.png" />
                <h4>小米账号登录</h4>

                <form method="post" id="logo.form">
                    <input type="text" placeholder="邮箱/手机号/小米账号" id="name" name="username"/>
                    <input type="password" placeholder="密码" id="pwd" name="pwd" />
                    <input type="button" value="立即登录" id="logo-button" />
                </form>
                <fieldset class="othser-legend">
                    <legend>其他方式登录</legend>
                </fieldset>
                <div class=" .icon-type-link">
                    <a class="icon-type" href="#">
                        <i class="icon-type-qq"></i>
                    </a>
                    <a class="icon-type" href="#">
                        <i class="icon-type-sina"></i>
                    </a>
                    <a class="icon-type" href="#">
                        <i class="icon-type-zfb"></i>
                    </a>
                </div>
                <p class="other-link">
                    <a href="#">注册小米账号</a>
                    <a href="#">忘记密码?</a>
                </p>
            </div>
        </div>
    </div>
    <script src="../js/jquery-1.11.3.js"></script>
    <script src="../js/login.js"></script>
</body>
</html>